{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES6",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "emitDeclarationOnly": false,
    "rootDir": ".",
  },
  "include": ["."],
}